{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "gpio": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "dof": {
                        "type": "integer"
                    },
                    "gpio_pin": {
                        "type": "integer"
                    },
                    "invert": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "dof",
                    "gpio_pin",
                    "invert"
                ]
            }
        },
        "control_frequency": {
            "type": "number",
            "exclusiveMinimum": 0
        },
        "pwm_frequency": {
            "type": "number",
            "exclusiveMinimum": 0
        }
    },
    "required": [
        "gpio",
        "control_frequency",
        "pwm_frequency"
    ]
}